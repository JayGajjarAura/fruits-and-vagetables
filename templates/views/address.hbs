<!DOCTYPE html>
<html lang="en">

<head>
    <title>Address</title>
    {{> head_links}}
</head>

<body id="main">
    {{> header}}

    <div class="container mb-5 pb-5">
        <div class="rounded bg-white p-3 ">
            <div class="pb-3">
                <h4 class="font-weight-bold"> Address Detail </h4>
            </div>
            <div class="mx-3">
                {{#each Address}}
                    {{#each order}}
                        {{#each Address}}
                            <div class="mb-3 border p-3 rounded">
                                <h6> <span class="font-weight-bold"> Name: </span> {{Name}} </h6>
                                <h6> <span class="font-weight-bold"> Phone Number: </span> {{contact_no}} </h6>
                                <h6> {{house_no}}, {{Area}}, {{city}}, {{state}}, 
                                    <span class="font-weight-bold"> 
                                        {{pincode}} 
                                    </span> 
                                </h6>
                                <span class="address_update show-address" id="show-address-{{_id}}"> <i class="fa-solid fa-pen-to-square"></i> Change Details </span>
                                <input type="hidden" name="address_id" value="{{_id}}">
                            </div>
                            <div>
                                <div id="address_{{_id}}" class="address-popup">
                                    <div class="address-content p-4 rounded">
                                        <form class="border rounded p-3">
                                            <div class="col">
                                                <div class="form-row mb-2">
                                                    <div class="col-md-4">
                                                        <label for="validationCustom01">First name</label>
                                                        <input type="text" class="form-control" id="validationCustom01" name="firstName" placeholder="First name">
                                                    </div>
                                                    <div class="col-md-4">
                                                        <label for="validationCustom02">Last name</label>
                                                        <input type="text" class="form-control" id="validationCustom02" name="lastName" placeholder="Last name">
                                                    </div>
                                                    <div class="col-md-4">
                                                        <label for="validationCustom08">Contact Number</label>
                                                        <input type="tel" class="form-control" id="validationCustom08" name="contactNumber" placeholder="Contact Number" pattern="[0-9]{10}">
                                                    </div>
                                                </div>
                                                <div class="form-row mb-2">
                                                    <div class="col-md-6">
                                                        <label for="validationCustom06">House / Flat No. & Locality</label>
                                                        <input type="text" class="form-control" id="validationCustom06" name="houseNo" placeholder="1234 abc">
                                                    </div>
                                                    <div class="col-md-6">
                                                        <label for="validationCustom07">Area</label>
                                                        <input type="text" class="form-control" id="validationCustom07" name="area"
                                                            placeholder="Main St">
                                                    </div>
                                                </div>
                                                <div class="form-row mb-2">
                                                    <div class="col-md-6">
                                                        <label for="validationCustom03">City</label>
                                                        <input type="text" class="form-control" id="validationCustom03" name="city" placeholder="City">
                                                    </div>
                                                    <div class="col-md-3">
                                                        <label for="validationCustom04">State</label>
                                                        <input type="text" class="form-control" id="validationCustom04" name="state"
                                                            placeholder="State">
                                                    </div>
                                                    <div class="col-md-3">
                                                        <label for="validationCustom05">Pincode</label>
                                                        <input type="text" class="form-control" id="validationCustom05" name="pincode" placeholder="Pincode" pattern="[0-9]{6}">
                                                    </div>
                                                </div>
                                                <button type="submit" class="btn btn-success mt-2 update_address_btn" data-address-id="{{_id}}"> Update Details </button>
                                                <p id="success-message" class="mt-3 p-3 w-25" style="display:none;color: white;background-color: green;"> Address Updated Successfully </p>
                                            </div>
                                        </form>
                                        <div>
                                            <a href="javascript:void(0)" class="close-address" id="address_{{_id}}"> &times; </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    {{/each}}
                {{/each}}
            </div>
            
        </div>
    </div>

    {{> toast_subscribe}}
    {{> footer}}
</body>

</html>