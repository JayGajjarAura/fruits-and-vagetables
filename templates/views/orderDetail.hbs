<!DOCTYPE html>
<html lang="en">

<head>
    <title>My Wishlist</title>
    {{> head_links}}
</head>

<body id="main">
    {{> header}}

    <div class="container mb-5 pb-5">
        <div class="bg-white p-3 mb-3 shadow_on_hover">
            <div class="d-flex pb-3">
                <a href="/orders" class="my-auto mr-2">
                    <i class="fa-solid fa-arrow-left"></i>
                </a>
                <h3 class="my-auto">Order Details</h3>
            </div>
            <div class="ml-5">
                <h5> Delivery Address </h5>
                <div class="ml-5 d-flex">
                    {{#each Order}}
                        {{#each order}}
                        <div class="col-md-6">
                            <h6> <span class="font-weight-bold"> Name: </span>  {{Address.[0].Name}}</h6>
                            <h6> <span class="font-weight-bold"> Phone Number: </span>  {{Address.[0].contact_no}}</h6>
                        </div>
                        <div class="col-md-6">
                            <h6> <span class="font-weight-bold"> Address: </span>  {{Address.[0].house_no}}, </h6>
                            <h6 class="ml-5 pl-4"> {{Address.[0].Area}}, </h6>
                            <h6 class="ml-5 pl-4"> {{Address.[0].city}}: {{Address.[0].pincode}}, </h6>
                            <h6 class="ml-5 pl-4"> {{Address.[0].state}} </h6>
                        </div>
                        {{/each}}
                    {{/each}}
                </div>
            </div>
        </div>

        <div class="bg-white p-3 shadow_on_hover">
            {{#each Order}}
                <p> <span class="font-weight-bold"> Order Id: </span> {{Order_Id}}</p>
            {{/each}}
            <div>
                <table class="table table-borderless spacing-table">
                    {{#each Order}}
                            <tbody>
                            {{#each order}}
                                <tr>
                                    <td class="d-flex flex-column">
                                        {{#each Product}}
                                            <img src="{{this.image}}" alt="{{this.title}}" style="height: 100px; width: 100px; object-fit: contain">
                                        {{/each}}
                                    </td>
                                    <td>
                                        {{#each itemName}}
                                            <div class="my-4 py-4"> {{this}} </div>
                                        {{/each}}
                                    </td>
                                    <td>
                                        {{#each Quantity}}
                                            <div class="my-4 py-4"> {{this}} </div>
                                        {{/each}}
                                    </td>
                                    <td>
                                        {{#each subTotal}}
                                            <div class="my-4 py-4"> {{this}} </div>
                                        {{/each}}
                                    </td>
                                </tr>
                            {{/each}}
                            </tbody>
                        <td colspan="4" class="text-right" style="padding-right: 100px;"> <span class="font-weight-bold">Total: </span>â‚¹ {{Total_amount}}</td>
                    {{/each}}
                </table>
            </div>
        </div>
    </div>

    {{> toast_subscribe}}
    {{> footer}}
</body>

</html>