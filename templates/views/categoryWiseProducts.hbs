<!DOCTYPE html>
<html lang="en">
<head>
    <title>Category</title>
    {{>head_links}}
</head>
<body>
    {{>header}}
        <div class="container mb-5 pb-4">
            <div class="row row-cols-1 row-cols-md-5">
                {{#each products}}
                <div class="col p-2">
                    <div class="card">
                        <a href="/products/{{slug}}">
                            <img class="card-img-top mt-3 product_images" src="{{image}}" alt="{{title}}" height="180px">
                        </a>
                        <div class="card-body px-4 py-1">
                            <p class="card-title font-weight-bold"> {{title}} </p>
                            <div class="star_rating_size ">
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                                <i class="fa fa-star"></i>
                            </div>
                            <p class="text-success font-weight-bold"> â‚¹{{price}} </p>
                            <div>
                                <div class="text-center">
                                    <button value="-" id="{{_id}}" class="value_btn minus_btn"> - </button>
                                    <input disabled id="qty_{{_id}}" class="input_area mx-1 text-center input_val" value="0">
                                    <button value="+" id="{{_id}}" class="value_btn mb-3 plus_btn"> + </button>
                                </div>
                                <button class="add_to_cart_toast add_to_cart_btn w-100 py-1 mb-2"> Add to cart </button>
                                <button class="buy_now_btn w-100 py-1 mb-3"> Buy now </button>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    {{>footer}}
</body>
</html>
