<!DOCTYPE html>
<html lang="en">
<head>
    <title>Products</title>
    {{>head_links}}
</head>
<body>
    {{>header}}
    <main>
        <div class="container pb-5 mb-4">
            {{#each products}}
                <div class="row bg-white rounded" style="height: 500px; width:100%">
                    <div class="col-6 my-auto">
                        <img src="{{image}}" alt="{{title}}" class="product_images" style="height: 400px; width:100%">
                    </div>
                    <div class="col-6 my-auto">
                        <h2 class="font-weight-bold">{{title}}</h2>
                        <div class="star_rating_size ">
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                            <i class="fa fa-star"></i>
                        </div>
                            <hr>
                        <h3 class="font-weight-bold"> <i class="fa fa-inr" aria-hidden="true"></i> {{price}}</h3>
                            <hr>
                        <div>
                            <div>
                                <button value="-" id="{{_id}}" class="value_btn minus_btn"> - </button>
                                <input disabled id="txt_{{_id}}" class="input_area mx-1 text-center input_val" value="0">
                                <button value="+" id="{{_id}}" class="value_btn mb-3 plus_btn"> + </button>
                            </div>
                            <button class="col-5 add_to_cart_toast add_to_cart_btn w-100 py-1 mb-2"> Add to cart </button>
                            <button class="col-5 buy_now_btn w-100 py-1 mb-3"> Buy now </button>
                        </div>
                        <div>
                            <p> <i class="fa-solid fa-truck-fast text-success"></i> Free Delivery </p>
                            <p> <i class="fa-regular fa-calendar-days text-success"></i> Return Delivery </p>
                        </div>
                    </div>
                </div>
            {{/each}}
        </div>
    {{>toast_subscribe}}
    </main>
    {{>footer}}
</body>
</html>