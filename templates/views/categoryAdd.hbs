<!DOCTYPE html>
<html lang="en">
<head>
    <title>Admin</title>
    {{> head_links_admin}}
</head>
<body>
    {{> header_admin}}
    <div class="container">
        <h1 class="mb-4">
            Category Add
        </h1>
        <form id="categoryAdd">
            <div class="form-group">
                <label>Category name:</label>
                <input type="text" id="category" name="name" required>
            </div>
            <div class="form-group">
                <label>Upload Image</label>
                <input type="file" id="categoryFile" name="image">
            </div>
            <button type="submit" class="btn btn-success mb-3"> Add Category </button>
        </form>
        <p class="mt-3 p-3 w-25 success-message rounded" style="display:none;color: white;background-color: green;"> Category Added Successfully </p>
    </div>
</body>
</html>